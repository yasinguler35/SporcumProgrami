@model DevFramework.Northwind.MvcWebUI.Models.FaturaTurleriListViewModel
@{
    Layout = null;
}


@using (Html.BeginForm("FaturaTurleriKayit", "FaturaTurleri", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model.faturaTurleriGet != null && Model.faturaTurleriGet.Id > 0)
    {
        @Html.HiddenFor(a => a.faturaTurleriGet.Id)
    }

    <div class="form-group">
        <label>Fatura Türü</label>
        @Html.TextBoxFor(a => a.faturaTurleriGet.FaturaTuru, new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(a => a.faturaTurleriGet.FaturaTuru)
    </div>


    <div>
        <input class="btn btn-success" type="submit" value="KAYIT" />
    </div>
}

