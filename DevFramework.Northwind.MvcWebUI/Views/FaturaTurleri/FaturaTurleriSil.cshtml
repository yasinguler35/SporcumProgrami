@model DevFramework.Northwind.MvcWebUI.Models.FaturaTurleriListViewModel
@{
    Layout = null;
}


@using (Html.BeginForm("FaturaTurleriSil", "FaturaTurleri", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.faturaTurleriGet.Id)


    <div class="form-group">
        <label>Fatura Türü</label>
        <p>@Model.faturaTurleriGet.FaturaTuru adli fatura türü silinecektir.</p>
    </div>


    <div>
        <input class="btn btn-danger" type="submit" value="SİL" />
    </div>
}

