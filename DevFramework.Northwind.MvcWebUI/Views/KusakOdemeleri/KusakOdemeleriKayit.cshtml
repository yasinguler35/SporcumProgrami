@model DevFramework.Northwind.MvcWebUI.Models.KusakOdemeleriListViewModel
@{
    Layout = null;
}


@using (Html.BeginForm("KusakOdemeleriKayit", "KusakOdemeleri", FormMethod.Post, new { id = "popupForm" }))
{

    if (Model.kusakOdemeleriGet != null && Model.kusakOdemeleriGet.Id > 0)
    {
        @Html.HiddenFor(a => a.kusakOdemeleriGet.Id)
        @Html.HiddenFor(a => a.kusakOdemeleriGet.SporcuId)
    }
    @*<div class="form-group">
        <label>Ad Soyad</label>
        @Html.TextBoxFor(a => a.kusakOdemeleriGet., new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(a => a.kusakOdemeleriDetayGet.AdSoyad)
    </div>*@
    <div class="form-group">
        <label>Ödeme Tarihi</label>
        @Html.TextBoxFor(a => a.kusakOdemeleriGet.OdemeTarihi, new { @Value = (Model.kusakOdemeleriGet != null) ? Model.kusakOdemeleriGet.OdemeTarihi.ToString() : DateTime.Now.ToString("dd.MM.yyyy"), @class = "form-control"})
        @Html.ValidationMessageFor(a => a.kusakOdemeleriGet.OdemeTarihi)
    </div>
    <div class="form-group">
        <label>Ödeme Tutari</label>
        @Html.TextBoxFor(a => a.kusakOdemeleriGet.OdemeTutari, new { @class = "form-control"})
        @Html.ValidationMessageFor(a => a.kusakOdemeleriGet.OdemeTutari)
    </div>
    <div class="form-group">
        <label>Sporcu Kategori</label>
        @Html.DropDownListFor(a => a.kusakOdemeleriGet.KusakId, new SelectList(ViewBag.kusaklargoster, "Id", "KusakAdi"), "Seçiniz", new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(a => a.kusakOdemeleriGet.KusakId)
    </div>
    <div>
        <input class="btn btn-success" type="submit" value="KAYIT" />
    </div>
}

