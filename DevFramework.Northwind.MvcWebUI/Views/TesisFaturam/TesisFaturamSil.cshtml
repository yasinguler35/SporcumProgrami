@model DevFramework.Northwind.MvcWebUI.Models.TesisDemirbaslarListViewModel
@{
    Layout = null;
}


@using (Html.BeginForm("TesisFaturamSil", "TesisFaturam", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.tesisFaturalariGet.Id)

    <div class="form-group">
        <label>Demirbaş Adı</label>
        <p>@Model.te</p>
    </div>
    <div class="form-group">
        <label>Fatura Tutari</label>
        <p>@Model.tesisFaturalariGet.TesisFaturaTutari</p>
    </div>
    <div class="form-group">
        <label>Son Ödeme</label>
        <p>@Model.tesisFaturalariGet.SonOdeme</p>
    </div>
    <div class="form-group">
        <label>İşlem Tarihi</label>
        <p>@Model.tesisFaturalariGet.IslemTarihi</p>
    </div>



    <div>
        <input class="btn btn-danger" type="submit" value="SİL" />
    </div>
}