@model DevFramework.Northwind.MvcWebUI.Models.KusaklarListViewModel
@{
    Layout = null;
}


@using (Html.BeginForm("KusaklarKayit", "Kusaklar", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model.kusaklarGet != null && Model.kusaklarGet.Id > 0)
    {
        @Html.HiddenFor(a => a.kusaklarGet.Id)
    }

    <div class="form-group">
        <label>Kuşak Adı</label>
        @Html.TextBoxFor(a => a.kusaklarGet.KusakAdi, new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(a => a.kusaklarGet.KusakAdi)
    </div>


    <div>
        <input class="btn btn-success" type="submit" value="KAYIT" />
    </div>
}
