@model DevFramework.Northwind.MvcWebUI.Models.KusaklarListViewModel
@{
    Layout = null;
}


@using (Html.BeginForm("KusaklarSil", "Kusaklar", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.kusaklarGet.Id)


    <div class="form-group">
        <label>Kuşak Adı</label>
        <p>@Model.kusaklarGet.KusakAdi adli kuşak silinecektir.</p>
    </div>


    <div>
        <input class="btn btn-danger" type="submit" value="SİL" />
    </div>
}
