@model DevFramework.Northwind.MvcWebUI.Models.SporcuListViewModel
@{
    Layout = null;
}


@using (Html.BeginForm("SporcuSil", "Sporcu", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.SporcuGet.Id)
    if (Model.SporcuGet.FotoID != null)
    {
        <div class="form-group">

            @Html.Action("FotoGoster", "Sporcu", new { fotoId = (Model.SporcuGet.FotoID != null) ? Model.SporcuGet.FotoID : 0 })
        </div>
    }

    <div class="form-group">
        <label>Branşı</label>
        <p>@Model.SporcuGet.KategoriAdi</p>
    </div>
    <div class="form-group">
        <label>Ad Soyad</label>
        <p>@Model.SporcuGet.AdSoyad</p>
    </div>
    <div class="form-group">
        <label>Telefon No</label>
        <p>@Model.SporcuGet.TelNo</p>
    </div>




    <div>
        <input class="btn btn-danger" type="submit" value="SİL" />
    </div>
}

